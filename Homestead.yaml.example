---
box: laravel/homestead-7
ip: "192.168.10.12"
memory: 2048
cpus: 1
hostname: buzzingpixel
name: BuzzingPixel
provider: virtualbox

authorize: ~/.ssh/id_rsa.pub

keys:
    - ~/.ssh/id_rsa

folders:
    - map: ~/Sites/BuzzingPixel/BuzzingPixel.com/repo/
      to: /home/vagrant/BuzzingPixel
      type: "nfs"

sites:
    - map: buzzingpixel.dev
      to: /home/vagrant/BuzzingPixel/public_html

databases:
    - homestead

variables:
    - key: APP_ENV
      value: local

